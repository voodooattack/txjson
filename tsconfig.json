{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "lib": ["ES2021", "ES2021.String"],
    "noEmit": true,
    "rootDir": "./src",
    "moduleResolution": "node",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./tests/**"]
}
